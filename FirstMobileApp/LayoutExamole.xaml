<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FirstMobileApp.LayoutExamole"
             Title="LayoutExamole">
    <VerticalStackLayout Padding="10,30,50,70">
        <Label 
            Text="Welcome to .NET MAUI! working example"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Grid BackgroundColor="Aquamarine" ColumnDefinitions="Auto,40,Auto">
            <Button Grid.Column="0" Text="Button1" WidthRequest="100"/>
            <Button Grid.Column="1" Text="Button2" WidthRequest="140"/>
            <Button Grid.Column="2" Text="Button3" WidthRequest="180"/>

        </Grid>
    </VerticalStackLayout>
</ContentPage>